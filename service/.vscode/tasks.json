{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go start",
      "type": "shell",
      "command": "go",
      "args": ["run", "cmd/spacegame/*.go"],
      "group": "build",
      "promptOnClose": false,
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": ["$go"],
      "options": {
        "env": {
          "PARCELLO_DEV_ENABLED": "1",
          "PARCELLO_RESOURCE_DIR": "./internal/infrastructure/database/migrations"
        }
      }
    }
  ]
}
