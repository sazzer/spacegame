  "version": "2.0.0",
  "tasks": [
    {
      "label": "go run",
      "type": "shell",
      "command": "go run cmd/spacegame/*",
      "group": "build",
      "promptOnClose": false,
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "go build",
      "type": "shell",
      "command": "go build ./...",
      "group": "build",
      "promptOnClose": false,
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "go test",
      "type": "shell",
      "command": "go test ./...",
      "group": "test",
      "promptOnClose": false,
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": ["$go"]
    }
  ]
}
